@model MyWeb.Models.Event

@{
    ViewBag.Title = "editEvent";
}



<!doctype html>
<html lang="en">
<head>
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/assets/css/loginform.css" rel="stylesheet">
</head>
<body>
    <div class="form" style="width:100%">
        <form class="login-form" action="~/Admin/editEvent" method="post">
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)


                <strong>Name</strong>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Event_Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Event_Name, "", new { @class = "text-danger" })
                </div>



                <strong>Ngày bắt đầu</strong>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DateStart, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DateStart, "", new { @class = "text-danger" })
                </div>



                <strong>Ngày kết thúc</strong>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DateEnd, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DateEnd, "", new { @class = "text-danger" })
                </div>



                <strong>Số lượng</strong>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                </div>


                <strong>Thể thức</strong>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Fomular, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Fomular, "", new { @class = "text-danger" })
                </div>




                <strong>Phần trăm giảm</strong>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DisscountPercent, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DisscountPercent, "", new { @class = "text-danger" })
                </div>



                <strong>Trạng thái</strong>
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Status)
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Lưu" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>

        <div>
            @Html.ActionLink("Trở về", "Event")
        </div>

    </div>


</body>
</html>

