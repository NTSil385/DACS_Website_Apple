@model MyWeb.Models.Post

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Share/Admin_ayoutPage1.cshtml";
}

@section Drop {
}


@section Btn {
}

@section User {
}

<h2>Create</h2>

<form action="/Admin/CreatePost" method="post" enctype="multipart/form-data">
    <div class="container-item" style="margin: 110px">
        <div class="row" style="max-width:100%; width:100%; height:auto">
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12" style="max-width:100%; height: auto; width:100%">
                <div class="panel panel-default" style="border: 1px solid #ccc; border-radius: 6px; margin: 4px">
                    <div class="item" style="padding: 10px">
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Tạo mới tin tức</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <p>Chọn danh mục</p>
                                <div class="col-md-10">
                                    <select class="form-control" name="ID_postcategory">
                                        @{
                                            MyWeb.Models.MYWEBEntities1 db = new MyWeb.Models.MYWEBEntities1();
                                            foreach (var items in db.PostCategories)
                                            {
                                                <option value="@items.ID">
                                                    @items.Name_type
                                                </option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Tiêu đề</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                              <label>Mô tả</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Đường dẫn</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.URL, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.URL, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                               <label>Người đăng</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Ngày tạo</label>
                                <div class="col-md-10">
                                    <input type="date" placeholder="DateCreated" class="form-control" name="DateCreated" value="" />
                                    @Html.ValidationMessageFor(model => model.DateCreated, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <label style="margin-top:4px">Chọn Hình</label>
                                    <input type="file" id="uploadFile" class="form-group" name="uploadFile" accept="image/*" style="margin: 5px" />

                                    @Html.ValidationMessageFor(model => model.images, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <button value="Create" class="btn btn-success" style="margin-top: 10px">Tạo</button>
                                </div>
                            </div>
                        </div>

                        <div>
                            @Html.ActionLink("Trở về", "Post")
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</form>


