            <a class="navbar-brand" href="~/Admin/Index">
                <img class="test" style="border-radius:50%" src="~/assets/imgs/logo1.jpg" alt="" />

            </a>
            <button class="navbar-toggler"
                    type="button"
                    data-toggle="collapse"
                    data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto align-items-center">

                    <li class="nav-item">

                        @RenderSection("Drop", true)
                    </li>
                    <li class="nav-item">
                        @RenderSection("Option", false)
                    </li>

                    @RenderSection("Btn", true)
                    <li class="nav-item">
                        <a class="nav-link" href="~/Admin/List">Tài khoản</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Admin/Bill">Hóa đơn</a>
                    </li>
                    <li class="nav-item">
