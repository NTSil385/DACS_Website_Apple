                        <div class="dropdown" style="cursor: pointer">
                            <div class="dropdown-toggle text-danger" data-toggle="dropdown">
                                <strong>QL Nhập hàng</strong>
                            </div>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Phiếu Nhập</a>
                                <a class="dropdown-item" href="#">Phiếu Lưu</a>
                                <a class="dropdown-item" href="#">Nhà cung cấp</a>
                              
                                <div class="dropdown-divider"></div>
                            </div>
                        </div>

                    </li>

                    @RenderSection("User", false)

                </ul>
            </div>
        </div>
    </nav>
    <!-- End of page navibation -->
    <!-- Page Header -->


    @RenderBody()
    <footer class="page-footer">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <p>
                        Copyright
                        <script>
                            document.write(new Date().getFullYear());
                        </script>
                        &copy;
