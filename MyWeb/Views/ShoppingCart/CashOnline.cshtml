
@{
    Layout = null;
}

<!DOCTYPE html>

<html style="align-items: center; display: flex; justify-content: center; background-color: #9acdf3;">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CheckOut</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=Work+Sans&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container" style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center;">
        <div class="form" style="align-items: center; width: 100%; height: 50%; background-color: #fff; border-radius: 8px; box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24); ">
            <label><strong></strong></label>
            @using (Html.BeginForm("saveBillPays", "ShoppingCart"))
            {

                <div class="title" style="font-family: 'Press Start 2P', cursive; font-family: 'Work Sans', sans-serif; font-size: 28px; font-weight: 800; margin: 10px; text-align: center; color: #000">Thanh toán Online</div>
                <div class="form-horizontal">

                    <div class="form-group" style="font-family: 'Press Start 2P', cursive; font-family: 'Work Sans', sans-serif;font-size:16px; margin: 10px">
                        Vui lòng nhập địa chỉ và số điện thoại nhận hàng bên dưới
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2" style="font-family: 'Press Start 2P', cursive; font-family: 'Work Sans', sans-serif; font-size: 16px;margin:10px;"><strong>Address</strong></label><br />
                        <input type="text" placeholder="addressConfirm" name="addressConfirm" style="margin: 10px 50px; width: 300px; height: 40px; border:1px solid #ccc; border-radius: 8px" />

                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2" style="font-family: 'Press Start 2P', cursive; font-family: 'Work Sans', sans-serif; font-size: 16px;margin:10px;"><strong>PhoneNumber</strong></label><br />
                        <input type="text" placeholder="PhoneNumber" name="PhoneNumber" style="margin: 10px 50px; width: 300px; height: 40px; border:1px solid #ccc; border-radius: 8px" />

                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10" style="margin:10px 20px 10px 150px">
                            <input type="submit" value="Submit" class="btn btn-success" style="width:70px; height:40px; border-radius:8px; border: 1px solid #ccc;float:right; margin-bottom: 20px;margin-right:70px" />
                        </div>
                    </div>
                </div>
            }

        </div>



    </div>
</body>
</html>
