@model MyWeb.Models.User

<!doctype html>
<html lang="en">
<head>
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/assets/css/loginform.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@300&display=swap" rel="stylesheet">
</head>
<body>
    <div class="login-box">
        <div class="form">

            @using (Html.BeginForm(""))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)


                @Html.EditorFor(model => model.FullName)
                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })


                @Html.EditorFor(model => model.PhoneNumber)
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })


                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })


                @Html.EditorFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })


                @Html.EditorFor(model => model.Sex)
                @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })



                @Html.TextBoxFor(model => model.Birthday, new { @type = "date" })
                @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })

                <div class="form-footer">

                    <button type="submit" style="font-family: 'Roboto Slab', serif;" class="exit">Sửa</button>


                    <a class="exit" style="font-family: 'Roboto Slab', serif;" href="~/Home/Index">Trở về</a>
                </div>

            }


        </div>
    </div>
    <style>
        .form-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
    </style>
    <style>
        .exit {
            color: #090909;
            max-width:50%;
            padding: 9px 1.7em;
            text-decoration: none;
            font-size: 18px;
            border-radius: 0.5em;
            background: #e8e8e8;
            border: 1px solid #e8e8e8;
            transition: all .3s;
            box-shadow: 6px 6px 12px #c5c5c5, -6px -6px 12px #ffffff;
        }

            .exit:active {
                color: #666;
                box-shadow: inset 4px 4px 12px #c5c5c5, inset -4px -4px 12px #ffffff;
            }
    </style>
</body>
</html>