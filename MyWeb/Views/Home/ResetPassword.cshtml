@model MyWeb.Models.ResetPasswordModel
@{
    ViewBag.Title = "Đổi mật khẩu";
}

<html style="align-items: center; display: flex; justify-content: center; background-color: #9acdf3; ">

<link rel="icon" href="~/assets/imgs/logo1.jpg">

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=Work+Sans&display=swap" rel="stylesheet">
<div class="container" style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center;">
    <div class="form" style="align-items: center; width: 100%; height: 50%;background-color:#fff ;border-radius: 8px; box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);">
        <form action="~/Home/ResetPassword" method="post">
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="title" style="font-family: 'Press Start 2P', cursive; font-family: 'Work Sans', sans-serif; font-size: 28px; font-weight: 800; margin: 20px; text-align: center; color: #000">Đổi mật khẩu</div>



                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2" style="font-family: 'Press Start 2P', cursive; font-family: 'Work Sans', sans-serif; font-size: 16px;margin:10px;"><strong>Mật khẩu mới</strong></label><br />
                    <div class="col-md-10">
                        <input type="password" autocomplete="current-password" minlength="4" maxlength="8" size="8" placeholder="NewPassword" name="NewPassword" style="margin: 10px 50px; width: 300px; height: 40px; border:1px solid #ccc; border-radius: 8px" />
                        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2" style="font-family: 'Press Start 2P', cursive; font-family: 'Work Sans', sans-serif; font-size: 16px;margin:10px;"><strong>Xác nhận mật khẩu</strong></label><br />

                    <div class="col-md-10">
                        <input type="password" autocomplete="current-password" minlength="4" maxlength="8" size="8" placeholder="ConfirmPassword" name="ConfirmPassword" style="margin: 10px 50px; width: 300px; height: 40px; border:1px solid #ccc; border-radius: 8px" />
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.HiddenFor(a => a.ResetCode)
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-success" style="width:70px; height:40px; border-radius:8px; border: 1px solid #ccc;float:right; margin-right:50px;margin-top:20px" />
                    </div>
                </div>
                <div class="text-success" style="font-family: 'Press Start 2P', cursive; font-family: 'Work Sans', sans-serif; font-size: 16px;margin:10px;color:forestgreen">
                    @ViewBag.Message
                </div>
                <div class="text-danger" style="font-family: 'Press Start 2P', cursive; font-family: 'Work Sans', sans-serif; font-size: 16px;margin:10px;color:red;">
                    @ViewBag.Faild
                </div>
            </div>
        </form>
        @section Scripts{
            <script src="~/Scripts/jquery.validate.min.js"></script>
            <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        }
    </div>
</div>
</html>